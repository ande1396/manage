<% @page_title = "Subject" %> <!-- setting the variable == to the string subjects--> 
<%= link_to(" <<back to list", {:action => 'index'}, :class => 'back-link') %>

<div class="subjects show">
	<h2>Show subject</h2>

	<table summary="Subject detail view">
		<tr>
			<th>Name</th>
			<td><%= @subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @subject.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created at</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated at</th>
			<td><%= @subject.updated_at %></td>
		</tr>

	</table>



<!-- working with a single object
	: is a turnary object --> 

</div>